{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "incremental": true
  },
  "include": [
    "src",
    "pages/[familyId].tsx",
    "pages/Profile.tsx",
    "pages/Finances.tsx",
    "pages/SmartHome.tsx",
    "pages/index.tsx",
    "pages/Information.tsx",
    "pages/Maintenance.tsx",
    "pages/GroceryList.tsx"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
